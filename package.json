{
    "name": "fifa-web-app-assistant",
    "version": "1.0.0",
    "description": "Fifa web app transfer assistant",
    "scripts": {
        "rebuild": "npm rebuild --runtime=electron --target=3.0.4 --disturl=https://atom.io/download/atom-shell --abi=64",
        "dev": "cross-env ELECTRON_CONNECT=true webpack --watch",
        "watch": "webpack --watch",
        "build": "cross-env NODE_ENV=production webpack -p",
        "build:dev": "webpack",
        "lint": "tslint --fix \"./src/**/*.ts{,x}\"",
        "prettier": "prettier --parser typescript --single-quote --tab-width 4 --write \"./src/**/*.ts{,x}\""
    },
    "browserslist": [
        "last 2 Chrome versions"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts{,x}": [
            "tslint",
            "prettier --parser typescript --single-quote --tab-width 4 --write",
            "git add"
        ]
    },
    "dependencies": {
        "cheerio": "^1.0.0-rc.2",
        "csv": "^4.0.0",
        "electron": "^3.0.4",
        "electron-connect": "^0.6.3",
        "lodash": "^4.17.11",
        "node-notifier": "^5.2.1",
        "react": "^16.5.2",
        "react-dom": "^16.5.2",
        "request-promise-native": "^1.0.5",
        "robotjs": "0.5.1"
    },
    "devDependencies": {
        "@danila/tslint-config": "^1.0.1",
        "@types/cheerio": "^0.22.9",
        "@types/csv-parse": "^1.1.11",
        "@types/csv-stringify": "^1.4.2",
        "@types/es6-promise": "^3.3.0",
        "@types/lodash": "^4.14.117",
        "@types/node": "^10.11.7",
        "@types/node-notifier": "0.0.28",
        "@types/react": "^16.4.16",
        "@types/react-dom": "^16.0.9",
        "@types/request-promise-native": "^1.0.15",
        "cross-env": "^5.2.0",
        "electron-reload-webpack-plugin": "^2.0.4",
        "fork-ts-checker-webpack-plugin": "^0.4.10",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.1.2",
        "lint-staged": "^7.3.0",
        "node-loader": "^0.6.0",
        "prettier": "^1.14.3",
        "ts-loader": "^5.2.1",
        "tslint": "^5.11.0",
        "typescript": "^3.1.3",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.2"
    }
}
